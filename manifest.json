{
  "manifest_version": 2,
  "name": "Hello World",
  "description": "Hello World!",
  "version": "0.0.1",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["background.js", "listen.js"],
    "persistent": true
  },
  "permissions": [
    "contextMenus", "notifications", "tabs", "bookmarks", "storage"
  ],
  "web_accessible_resources": [
    "inject-js/inject.js",
    "inject-js/inject0.js",
    "inject-js/inject1.js"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.baidu.com/"],
      "js": ["js/storage-test.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/for-every-frame.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["js/workForAll.js"],
      "css": ["css/workForAll.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://*.youtube.com/watch*"],
      "js": ["js/sendAndGetMessage.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup/defaultPopUp.html",
    "default_title": "Pop up title"
  }
}